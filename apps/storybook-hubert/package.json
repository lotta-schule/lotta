{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "@lotta-schule/storybook-hubert",
  "version": "6.1.16",
  "description": "Storybook Documentation for Hubert",
  "author": "Alexis Rinaldoni <alexis.rinaldoni@einsa.net>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "e2e": "concurrently -k -s 'first' 'http-server test-sb-static --port 6006 --silent' -P 'wait-on tcp:6006 && test-storybook'",
    "e2e:prepare": "NODE_ENV=test nx build storybook-hubert --test --output-dir=test-sb-static",
    "lint": "eslint 'src/**/*.*' --no-warn-ignored --fix",
    "typecheck": "tsc --noEmit",
    "build": "storybook build"
  },
  "type": "module",
  "devDependencies": {
    "@lotta-schule/storybook-addon-theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-coverage": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-links": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@storybook/test": "catalog:",
    "@storybook/test-runner": "catalog:",
    "chromatic": "catalog:",
    "framer-motion": "catalog:",
    "http-server": "catalog:",
    "storybook": "catalog:",
    "wait-on": "catalog:"
  },
  "nx": {
    "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ]
    },
    "targets": {
      "dev": {
        "inputs": [
          "default"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "outputs": [
          "{projectRoot}/storybook-static"
        ],
        "inputs": [
          "default"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "e2e": {
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "inputs": [
          "{projectRoot}/test-sb-static"
        ],
        "dependsOn": [
          "e2e:prepare"
        ]
      },
      "e2e:prepare": {
        "inputs": [
          "default"
        ],
        "outputs": [
          "{projectRoot}/test-sb-static"
        ]
      }
    }
  },
  "lint-staged": {
    "$schema": "https://json.schemastore.org/lint-staged",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{graphql,gql}": [
      "prettier --write"
    ],
    "*.{html,xml}": [
      "prettier --write"
    ]
  }
}
