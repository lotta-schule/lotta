{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "composite": true,
    "types": [
      "node",
      "vite/client"
    ],
    "outDir": "../../dist/app/web/app"
  },
  "include": [
    "**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.ts?",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.ts?",
    "src/test/**/*.ts",
    "src/test/**/*.ts?",
  ],
}
