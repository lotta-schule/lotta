{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.json",

  "compilerOptions": {
    "baseUrl": "src/",
    "composite": true,
    "outDir": "../../dist/app/web/test",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "vitest"],
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "test.setup.ts",
    "test.setup.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "**/*.d.ts",
    "**/*.graphql",
    "src/**/*.json",
  ]
}
