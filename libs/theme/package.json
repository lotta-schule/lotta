{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "@lotta-schule/theme",
  "version": "6.0.24",
  "description": "Theme definition for hubert, lotta's component library",
  "author": "Alexis Rinaldoni <alexis@rinaldoni.net>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "lint": "pnpm dlx eslint 'src/**/*.*' --no-warn-ignored --fix",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "lint-staged": {
    "$schema": "https://json.schemastore.org/lint-staged",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{graphql,gql}": [
      "prettier --write"
    ],
    "*.{html,xml}": [
      "prettier --write"
    ]
  }
}
