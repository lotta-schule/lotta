{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "test",
          "lint",
          "typecheck",
          "build",
          "storybook:test",
          "storybook:build",
          "test:ci"
        ],
        "accessToken": "MjU3OGRjMmMtZjcyNS00ZjYzLWIzYzEtYWE3ODNjOTNmNzJmfHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": [],
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "outputs": ["{projectRoot}/coverage/"]
    },
    "lint": {
      "inputs": [
        "default",
        "{projectRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    },
    "typecheck": {
      "dependsOn": [],
      "inputs": ["default", "{workspaceRoot}/tsconfig.base.json"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/"]
    },
    "storybook:test": {
      "dependsOn": ["^storybook:test"],
      "outputs": ["{projectRoot}/coverage/"]
    },
    "storybook:test:ci": {
      "dependsOn": ["^storybook:test:ci"]
    },
    "storybook:build": {
      "dependsOn": ["^storybook:build"],
      "outputs": ["{projectRoot}/storybook-static"]
    },
    "start:prod": {
      "dependsOn": ["^start:prod"]
    },
    "test:ci": {
      "dependsOn": ["^test:ci"],
      "outputs": ["{projectRoot}/coverage"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/jest.setup.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/src/test/util.[jt]sx?",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json"
    ],
    "sharedGlobals": [],
    "affected": {
      "defaultBase": "main"
    }
  }
}
