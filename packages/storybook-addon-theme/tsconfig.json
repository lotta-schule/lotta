{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "../..",
    "types": ["vite/globals"],
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@lotta-schule/theme": ["../../theme/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../theme/src/**/*"]
}
