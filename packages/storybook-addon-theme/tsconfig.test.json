{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/lib/storybook-addon-theme/out-tsc",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "vitest"],
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "test.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/**/*.d.ts",
    "./*.d.ts"
  ],
  "exclude": [
    "src/**/*.ts", "src/**/*.tsx"
  ]
}
