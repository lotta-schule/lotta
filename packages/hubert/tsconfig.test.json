{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.json",

  "compilerOptions": {
    "composite": true,
    "outDir": "dist/lib/hubert/test",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "vitest"],
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "test.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/**/*.d.ts",
    "src/test-utils.tsx",
    "./*.d.ts"
  ]
}
