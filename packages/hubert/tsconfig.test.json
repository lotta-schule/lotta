{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.json",

  "compilerOptions": {
    "composite": true,
    "outDir": "dist/lib/hubert/test",
    "types": ["vitest/globals", "vite/client", "vitest", "@testing-library/jest-dom/types"],
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "test.setup.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/test-utils.tsx",
    "src/test-fixtures.tsx",
    "./*.d.ts"
  ]
}
