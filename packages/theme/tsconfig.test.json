{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/lib/theme/test",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "vitest"
    ],
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "test.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./*.d.ts"
  ],
  "exclude": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}
