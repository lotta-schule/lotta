{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/lib/storybook-hubert",
    "noEmit": true,
    "types": ["node", "vite/client"],
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/.storybook/**/*.ts", "src/.storybook/**/*.tsx"]
}
