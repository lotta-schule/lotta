{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "@lotta-schule/storybook-hubert",
  "version": "4.2.1-alpha.2",
  "description": "Storybook Documentation for Hubert",
  "author": "Alexis Rinaldoni <alexis.rinaldoni@einsa.net>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "e2e": "concurrently -k -s 'first' 'http-server test-sb-static --port 6006 --silent' -P 'wait-on tcp:6006 && test-storybook {@}'",
    "e2e:prepare": "NODE_ENV=test nx build storybook-hubert --test --output-dir=test-sb-static",
    "lint": "eslint 'src/**/*.*' --no-warn-ignored --fix",
    "typecheck": "tsc --noEmit",
    "build": "storybook build"
  },
  "type": "module",
  "devDependencies": {
    "@lotta-schule/storybook-addon-theme": "../storybook-addon-theme/",
    "@storybook/addon-a11y": "^8.1.1",
    "@storybook/addon-actions": "^8.1.1",
    "@storybook/addon-coverage": "^1.0.3",
    "@storybook/addon-essentials": "^8.1.1",
    "@storybook/addon-interactions": "^8.1.1",
    "@storybook/addon-links": "^8.1.1",
    "@storybook/addon-mdx-gfm": "^8.1.1",
    "@storybook/addon-storysource": "^8.1.1",
    "@storybook/addon-themes": "^8.1.1",
    "@storybook/addon-viewport": "^8.1.1",
    "@storybook/blocks": "^8.1.1",
    "@storybook/manager-api": "^8.1.1",
    "@storybook/preview-api": "^8.1.1",
    "@storybook/react": "^8.1.1",
    "@storybook/react-vite": "^8.1.1",
    "@storybook/test": "^8.1.1",
    "@storybook/test-runner": "^0.18.1",
    "@storybook/theming": "^8.1.1",
    "chromatic": "^11.3.5",
    "framer-motion": "^11.2.4",
    "http-server": "^14.1.1",
    "storybook": "^8.1.1",
    "wait-on": "^7.2.0"
  },
  "nx": {
    "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ]
    },
    "targets": {
      "dev": {
        "inputs": [
          "default"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "outputs": [
          "{projectRoot}/storybook-static"
        ],
        "inputs": [
          "default"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "e2e": {
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "inputs": [
          "{projectRoot}/test-sb-static"
        ],
        "dependsOn": [
          "e2e:prepare"
        ]
      },
      "e2e:prepare": {
        "inputs": [
          "default"
        ],
        "outputs": [
          "{projectRoot}/test-sb-static"
        ]
      }
    }
  }
}
