{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "../..",
    "types": ["vite/client"],
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@lotta-schule/theme": ["../../theme/src/index.ts"],
      "@lotta-schule/hubert": ["../../hubert/src/index.ts"]
    }
  },
  "include": [
    ".storybook/**/*",
    "src/**/*",
    "../theme/src/**/*",
    "../hubert/src/**/*"
  ]
}
