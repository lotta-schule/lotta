{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": ".next",
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "paths": {
      "@lotta-schule/hubert": [
        "../../hubert/src/index.ts"
      ],
      "@lotta-schule/theme": [
        "../../theme/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.test.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
