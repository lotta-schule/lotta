{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "rootDirs": [
      "src"
    ],
    "types": [],
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "references": [
    {
      "path": "./theme/tsconfig.json"
    },
    {
      "path": "./storybook-addon-theme/tsconfig.json"
    },
    {
      "path": "./hubert/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*"
  ]
}
