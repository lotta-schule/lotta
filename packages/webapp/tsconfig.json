{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": ".next",
    "rootDir": "src",
    "types": [],
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "../theme"
    },
    {
      "path": "../storybook-addon-theme"
    },
    {
      "path": "../hubert"
    }
  ],
  "include": ["src/**/*"]
}
