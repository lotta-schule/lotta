{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "isolatedModules": true,
    "incremental": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],

    "paths": {
      "@lotta-schule/hubert": [
        "../../hubert/src/index.ts"
      ],
      "@lotta-schule/theme": [
        "../../theme/src/index.ts"
      ]
    },
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.test.json"
    }
  ],
  "files": [],
  "include": [
  ],
  "exclude": [
  ]
}
