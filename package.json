{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@lotta-schule/lotta",
  "description": "Lotta Web Monorepo",
  "homepage": "https://lotta.schule",
  "scripts": {
    "dev": "nx run-many --target=dev --parallel --exclude core-api",
    "dev:full": "nx run-many --target=dev --parallel",
    "test": "nx run-many --target=test --parallel",
    "lint": "nx run-many --target=lint --parallel",
    "typecheck": "nx run-many --target=typecheck --parallel",
    "release:prepare": "./scripts/release.sh",
    "nx": "nx",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@eslint/compat": "catalog:",
    "@eslint/js": "catalog:",
    "@next/eslint-plugin-next": "catalog:",
    "@nx/js": "catalog:",
    "@nx/workspace": "catalog:",
    "@react-types/checkbox": "catalog:",
    "@react-types/progress": "catalog:",
    "@react-types/shared": "catalog:",
    "@rollup/plugin-graphql": "catalog:",
    "@swc-node/register": "catalog:",
    "@swc/core": "catalog:",
    "@swc/helpers": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/absinthe__socket": "catalog:",
    "@types/absinthe__socket-apollo-link": "catalog:",
    "@types/cookies": "catalog:",
    "@types/file-saver": "catalog:",
    "@types/is-url": "catalog:",
    "@types/lodash": "catalog:",
    "@types/node": "catalog:",
    "@types/phoenix": "catalog:",
    "@types/react": "catalog:",
    "@types/react-big-calendar": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/slate-base64-serializer": "catalog:",
    "@types/user-event": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/browser-playwright": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "@vitest/ui": "catalog:",
    "chromium-bidi": "catalog:",
    "concurrently": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-promise": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-compiler": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-storybook": "catalog:",
    "eslint-plugin-testing-library": "catalog:",
    "eslint-plugin-vitest": "catalog:",
    "graphql-tag": "catalog:",
    "http-server": "catalog:",
    "husky": "catalog:",
    "jsdom": "catalog:",
    "lerna": "catalog:",
    "lint-staged": "catalog:",
    "nx": "catalog:",
    "playwright": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-plugin-externalize-deps": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "overrides": {
      "eslint": "catalog:",
      "react": "catalog:",
      "react-dom": "catalog:",
      "react-is": "catalog:"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@sentry/cli",
      "@swc/core",
      "esbuild",
      "nx",
      "sharp",
      "unrs-resolver"
    ],
    "patchedDependencies": {
      "@testing-library/user-event@14.6.1": "patches/@testing-library__user-event@14.6.1.patch"
    }
  },
  "lint-staged": {
    "$schema": "https://json.schemastore.org/lint-staged",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{graphql,gql}": [
      "prettier --write"
    ],
    "*.{html,xml}": [
      "prettier --write"
    ],
    "*.{ex,exs,eex,heex}": [
      "mix format"
    ]
  }
}
