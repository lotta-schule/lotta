{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@lotta-schule/lotta",
  "description": "Lotta Web Monorepo",
  "homepage": "https://lotta.schule",
  "scripts": {
    "dev": "nx run-many --target=dev --parallel --exclude core-api",
    "dev:full": "nx run-many --target=dev --parallel",
    "test": "nx run-many --target=test --parallel",
    "lint": "nx run-many --target=lint --parallel",
    "typecheck": "nx run-many --target=typecheck --parallel",
    "release:prepare": "./scripts/release.sh",
    "nx": "nx",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@next/eslint-plugin-next": "^15.2.0",
    "@nx/js": "19.5.3",
    "@nx/workspace": "19.5.3",
    "@react-types/checkbox": "^3.8.3",
    "@react-types/progress": "^3.5.6",
    "@react-types/shared": "^3.24.1",
    "@rollup/plugin-graphql": "^2.0.4",
    "@swc-node/register": "~1.10.9",
    "@swc/core": "~1.11.5",
    "@swc/helpers": "~0.5.11",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/absinthe__socket": "^0.2.6",
    "@types/absinthe__socket-apollo-link": "^0.2.1",
    "@types/cookies": "^0.9.0",
    "@types/file-saver": "^2.0.7",
    "@types/is-url": "^1.2.32",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.8",
    "@types/phoenix": "^1.6.5",
    "@types/react": "^19.0.0",
    "@types/react-big-calendar": "^1.8.9",
    "@types/react-dom": "^19.0.0",
    "@types/slate-base64-serializer": "^0.2.5",
    "@types/user-event": "^4.1.3",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "concurrently": "^9.1.2",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.2.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-compiler": "beta",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.3",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-vitest": "0.5.4",
    "graphql-tag": "^2.12.6",
    "http-server": "^14.1.1",
    "husky": "^9.1.3",
    "jsdom": "^26.0.0",
    "lerna": "^8.1.7",
    "lint-staged": "^15.2.7",
    "nx": "20.4.6",
    "playwright": "^1.45.3",
    "prettier": "^3.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.3.5",
    "vite-plugin-dts": "4.5.1",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "patchedDependencies": {
      "next@15.1.4": "patches/next@15.1.4.patch"
    },
    "overrides": {
      "eslint": "^9.0.0"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@sentry/cli",
      "@swc/core",
      "esbuild",
      "nx",
      "sharp"
    ]
  },
  "lint-staged": {
    "$schema": "https://json.schemastore.org/lint-staged",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{graphql,gql}": [
      "prettier --write"
    ],
    "*.{html,xml}": [
      "prettier --write"
    ],
    "*.{ex,exs,eex,heex}": [
      "mix format"
    ]
  }
}
