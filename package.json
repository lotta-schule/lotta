{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@lotta-schule/lotta",
  "description": "Lotta Web Monorepo",
  "homepage": "https://lotta.schule",
  "scripts": {
    "dev": "nx run-many --target=dev --parallel --exclude core-api",
    "dev:full": "nx run-many --target=dev --parallel",
    "test": "nx run-many --target=test --parallel",
    "lint": "nx run-many --target=lint --parallel",
    "typecheck": "nx run-many --target=typecheck --parallel",
    "release:prepare": "./scripts/release.sh",
    "nx": "nx",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.0.10",
    "@nx/js": "22.3.1",
    "@nx/workspace": "22.3.1",
    "@react-types/checkbox": "^3.10.2",
    "@react-types/progress": "^3.5.16",
    "@react-types/shared": "^3.32.1",
    "@rollup/plugin-graphql": "^2.0.4",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.6",
    "@swc/helpers": "~0.5.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/absinthe__socket": "^0.2.6",
    "@types/absinthe__socket-apollo-link": "^0.2.1",
    "@types/cookies": "^0.9.2",
    "@types/file-saver": "^2.0.7",
    "@types/is-url": "^1.2.32",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/phoenix": "^1.6.7",
    "@types/react": "^19.2.7",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19.2.3",
    "@types/slate-base64-serializer": "^0.2.5",
    "@types/user-event": "^4.1.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-istanbul": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "chromium-bidi": "^12.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.1.10",
    "eslint-plugin-testing-library": "^7.15.1",
    "eslint-plugin-vitest": "0.5.4",
    "graphql-tag": "^2.12.6",
    "http-server": "^14.1.1",
    "husky": "^9.1.3",
    "jsdom": "^27.3.0",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "nx": "22.3.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-externalize-deps": "^0.10.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "overrides": {
      "eslint": "^9.0.0",
      "react": "^19.2.1",
      "react-dom": "^19.2.1"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@sentry/cli",
      "@swc/core",
      "esbuild",
      "nx",
      "sharp"
    ],
    "patchedDependencies": {
      "@testing-library/user-event@14.6.1": "patches/@testing-library__user-event@14.6.1.patch"
    }
  },
  "lint-staged": {
    "$schema": "https://json.schemastore.org/lint-staged",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{graphql,gql}": [
      "prettier --write"
    ],
    "*.{html,xml}": [
      "prettier --write"
    ],
    "*.{ex,exs,eex,heex}": [
      "mix format"
    ]
  }
}
