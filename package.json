{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "@lotta-schule/lotta",
  "description": "Lotta Web Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://lotta.schule",
  "scripts": {
    "dev": "nx run-many --target=dev --parallel",
    "test": "nx run-many --target=test --parallel",
    "lint": "nx run-many --target=lint --parallel",
    "typecheck": "nx run-many --target=typecheck --parallel"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "^16.7.2",
    "@nx/workspace": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "concurrently": "^8.2.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lerna": "^7.2.0",
    "lint-staged": "^14.0.0",
    "nx": "16.7.1",
    "nx-cloud": "latest",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "nx": {
    "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ]
    },
    "targets": {
      "dev": {
        "inputs": [
          "default"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "e2e": {
        "outputs": [
          "{projectRoot}/coverage"
        ],
        "inputs": [
          "{projectRoot}/test-sb-static"
        ],
        "dependsOn": [
          "e2e:prepare"
        ]
      },
      "e2e:prepare": {
        "inputs": [
          "default"
        ],
        "outputs": [
          "{projectRoot}/test-sb-static"
        ]
      }
    }
  }
}
